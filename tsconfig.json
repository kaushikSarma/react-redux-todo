{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": false,
        "module": "commonjs",
        "target": "es6",
        "lib": [ "es2015", "es2017", "dom" ],
        "jsx": "react",
        "removeComments": true,
        "baseUrl": "./",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "components/*": [
                "src/components/*"
            ],
            "data/*": [
                "src/data/*"
            ]
        }
    }
}